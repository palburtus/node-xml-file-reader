{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es5",
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "typeRoots": [ "./typings" ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./plugins/**/*",
        "./typings/**/*",
        "./build/**/*" //
    ]
}